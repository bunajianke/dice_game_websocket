page {
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  background: -webkit-radial-gradient(ellipse, #5108b1, #1f0f53);
  background: radial-gradient(ellipse, #5108b1, #1f0f53);
  background-image: url(https://hkb.weishuapay.com/static/bg.png);
  background-position: center;
  background-size: cover;
}
.container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}
.container .wheel {
    width: 660rpx;
    height: 660rpx;
    position: relative;
}
.container .wheel .bg {
      width: 100%;
      height: 100%;
      position: absolute;
}
.container .wheel .pointer {
      position: absolute;
      top: 50%;
      left: 50%;
      -webkit-transform: translate(-50%, -50%);
              transform: translate(-50%, -50%);
      width: 250rpx;
      height: 250rpx;
}
.container .wheel .item-wrapper {
      position: absolute;
      width: 100%;
      height: 100%;
      left: 0;
      top: 0;
}
.container .wheel .item-wrapper .inner {
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;
        position: relative;
}
.container .wheel .item-wrapper .inner .item {
          position: absolute;
          left: 50%;
          top: 50%;
          box-sizing: border-box;
          padding-left: 120rpx;
          height: 48rpx;
          width: 280rpx;
          margin-top: -24rpx;
          -webkit-transform-origin: 0 24rpx;
                  transform-origin: 0 24rpx;
          text-align: center;
}
.result-modal {
  position: relative;
}
.result-modal .result {
    position: absolute;
    color: #F2573B;
    font-weight: bold;
    top: 55%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
}
.result-modal .one-more-time {
    position: absolute;
    left: 50%;
    top: 82%;
    -webkit-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
    width: 180rpx;
    height: 70rpx;
    border-radius: 50rpx;
    box-shadow: none;
    background: -webkit-linear-gradient(top, #ffe67d, #ffd22a);
    background: linear-gradient(to bottom, #ffe67d, #ffd22a);
    color: #F2573B;
    font-size: 14px;
}
.result-modal .one-more-time::before {
      content: none;
}

